<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#009688"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Handy GPS"
            android:textAlignment="center"
            android:textColor="#fff"

            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_location"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/_8ssp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:hint="Enter Your Location" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id = "@+id/button"
        android:layout_width = "fill_parent"
        android:layout_height = "35dp"
       android:layout_below="@+id/input_location"
        android:background="@drawable/roundedbutton"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_3ssp"
        android:text = "Get Current Location"/>


    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_left"
        android:layout_below="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="5dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
    card_view:cardBackgroundColor="#80CBC4"
    card_view:cardElevation="6dp"
    card_view:cardMaxElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_marginTop="@dimen/_3ssp"
        android:layout_width="match_parent"
        android:padding="@dimen/_5ssp"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:text="Latitude :   "
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_toEndOf="@+id/text1"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="#fff"
            card_view:cardElevation="6dp"
            card_view:cardMaxElevation="10dp">
            <TextView
                android:id="@+id/lattitude"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3ssp"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>


    </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_below="@+id/relative1"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lan"
                    android:layout_width="wrap_content"
                    android:text="Longitude :"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_toEndOf="@+id/lan"
                    android:layout_marginLeft="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="10dp">
                    <TextView
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3ssp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_below="@+id/relative2"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/acc"
                    android:layout_width="wrap_content"
                    android:text="Accuracy : "
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_toEndOf="@+id/acc"
                    android:layout_marginLeft="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="10dp">
                    <TextView
                        android:id="@+id/accuracy"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3ssp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_below="@+id/relative3"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/allti"
                    android:layout_width="wrap_content"
                    android:text="Altitude  :   "
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_toEndOf="@+id/allti"
                    android:layout_marginLeft="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="10dp">
                    <TextView
                        android:id="@+id/alltitude"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3ssp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_below="@+id/relative4"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bearing"
                    android:layout_width="wrap_content"
                    android:text="Bearing   :   "
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_toEndOf="@+id/bearing"
                    android:layout_marginLeft="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="10dp">
                    <TextView
                        android:id="@+id/tvBearing"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3ssp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative6"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_below="@+id/relative5"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:text="Time:          "
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_toEndOf="@+id/timestamp"
                    android:layout_marginLeft="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="10dp">
                    <TextView
                        android:id="@+id/tvtime"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3ssp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative7"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_below="@+id/relative6"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Direction"
                    android:layout_width="wrap_content"
                    android:text="Direction:   "
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_toEndOf="@+id/Direction"
                    android:layout_marginLeft="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="10dp">
                    <TextView
                        android:id="@+id/tvDirection"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3ssp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>



</android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/cardview"
        android:layout_below="@+id/card_view_left"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <Button
            android:id = "@+id/save"
            android:layout_width = "wrap_content"
            android:layout_height = "35dp"

            android:background="@drawable/roundedbutton"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_margin="@dimen/_8ssp"
            android:text = "Save"/>
        <Button
            android:id = "@+id/view"
            android:layout_width = "wrap_content"
            android:layout_height = "35dp"

            android:background="@drawable/roundedbutton"
            android:layout_toRightOf="@+id/save"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_margin="@dimen/_8ssp"
            android:text = "View All"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/camera_rl"
        android:layout_below="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<TextView
    android:id="@+id/indicate"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:textColor="#000"
    android:text="Click on Camara icon to capture image"
    android:layout_height="wrap_content" />


        <ImageView
            android:id = "@+id/camera"
            android:layout_width = "@dimen/_40sdp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height = "@dimen/_40sdp"
            android:src="@drawable/photo_camera"/>


        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"


            android:visibility="visible" />

    </RelativeLayout>




            <Button
                android:id = "@+id/saveimage"
                android:layout_width = "wrap_content"
                android:layout_height = "35dp"
                android:layout_below="@+id/camera_rl"
                android:visibility="gone"
                android:background="@drawable/roundedbutton"
               android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_margin="@dimen/_8ssp"
                android:text = "Save Image"/>



    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"

android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="Heading: 0.0" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>